<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/id_item_follow_LL"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_follow_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_follow_follower_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/id_follow_follower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_follow_follower_photo"
            android:text="userName" />

        <TextView
            android:id="@+id/id_follow_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布了"
            android:layout_toRightOf="@id/id_follow_follower_name"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/id_follow_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_follow_follower_name"
            android:layout_toRightOf="@id/id_follow_follower_photo"
            android:gravity="bottom"
            android:layout_alignBottom="@id/id_follow_follower_photo"
            android:text="userLocation" />

        <TextView
            android:id="@+id/id_follow_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="followMoment"
            android:layout_below="@id/id_follow_follower_name"

            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:layout_alignBottom="@id/id_follow_follower_photo"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/id_follow_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="followContent"/>
    <GridView
        android:id="@+id/id_follow_photo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/action_commend"/>
        <TextView
            android:id="@+id/id_follow_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commentCount"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/action_comment"/>
        <TextView
            android:id="@+id/id_follow_commend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commendCount"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/action_view"/>
        <TextView
            android:id="@+id/id_follow_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commentCount"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_follow_comment_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="赞"/>
        <Button
            android:id="@+id/id_follow_share_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="分享"/>
        <Button
            android:id="@+id/id_follow_commend_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评论"/>

    </LinearLayout>
</LinearLayout>